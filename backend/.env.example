# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jolash_salon
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password

# OR use Database URL (for production like Railway/Heroku)
# DATABASE_URL=postgresql://user:password@host:port/database

# Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production

# Payment Gateway (Authorize.net)
AUTHORIZENET_API_LOGIN_ID=your_api_login_id
AUTHORIZENET_TRANSACTION_KEY=your_transaction_key
AUTHORIZENET_ENVIRONMENT=sandbox

# Email Configuration (for email verification)
# Development: Use Gmail with App Password (https://myaccount.google.com/apppasswords)
# Production: Use SendGrid, AWS SES, or Mailgun
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# For production email services:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# For production, change to:
# AUTHORIZENET_ENVIRONMENT=production
# FRONTEND_URL=https://your-domain.vercel.app

